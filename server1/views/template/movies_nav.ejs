<header>
    <div>
        <nav class="sub_nav">
            <form method="GET">
                <% if (user.permissions.includes("View Movies")) { %>
                <button class=<%= selected == "default" ? "sub_nav_button_selected" : "sub_nav_button" %> type="submit" formaction="/movies"> All Movies</button>
                <% } %>
                <% if (user.permissions.includes("Create Movies")) { %>
                <button class=<%= selected == "add" ? "sub_nav_button_selected" : "sub_nav_button" %> type="submit" formaction="/movies/add"> Add Movie</button>
                <% } %>
                <input class="findInput" placeholder="Type a movie title" type="text" name="searchText" />
                <button type="submit" formaction="/movies/find"> Find</button>
            </form>
        </nav>
    </div>
</header>